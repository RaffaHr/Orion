{
  "version": 2,
  "builds": [
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"  // Diretório onde os arquivos estáticos são gerados pelo Vite
      }
    }
  ],
  "routes": [
    {
      "src": "/api/login",
      "dest": "/api/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/chat.js"
    },
    {
      "src": "/(.*)",   // Redirecionar todas as rotas para o index.html para o React Router DOM gerenciar
      "dest": "/dist/index.html"
    }
  ]
}
